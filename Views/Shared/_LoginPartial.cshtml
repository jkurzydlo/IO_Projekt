@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj, @User.Identity.Name</a>
    </li>
        <li class="dropdown">
            <button class="btn btn-outline-success me-2 dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Zarządzaj 
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" asp-controller="Books" asp-action="Index">Książki</a></li>
                <li><a class="dropdown-item" href="#">Użytkownicy</a></li>
                <li><a class="dropdown-item" href="#">Zamówienia</a></li>
            </ul>
        </li> 
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-outline-success me-2">Wyloguj</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="btn btn-outline-success me-2" id="register" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-outline-success me-2" id="login" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
    </li>
}
</ul>
